.youtube
{
    cursor: pointer;
    background-color #000;
    -webkit-font-smoothing: antialiased;

    &__thumbnail
    {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 1;
        background-position: center;
        background-repeat: no-repeat;
        transition: opacity .5s cubic-bezier(0.0,0.0,0.2,1);
        background-size: cover;
    }

    & .youtube-button
    {
        border: none;
        background-color: transparent;
        padding: 0;
        color: inherit;
        text-align: inherit;
        font-size: 100%;
        font-family: inherit;
        cursor: default;
        line-height: inherit;

        &,
        &:focus
        {
            outline: 0;
        }

        &:not([aria-disabled=true]):not([disabled]):not([aria-hidden=true])
        {
            cursor: pointer;
        }

        & svg
        {
            pointer-events: none;
        }
    }

    // Default YouTube button
    & .youtube-button_theme_default
    {
        &.youtube-button_size_l
        {
            position: absolute;
            left: 50%;
            top: 50%;
            width: 68px;
            height: 48px;
            margin-left: -34px;
            margin-top: -24px;
            transition: opacity .25s cubic-bezier(0.0,0.0,0.2,1);
        }

        .ytp-large-play-button-bg
        {
            opacity: .9;
            fill: #1f1f1f;
            transition: fill .1s cubic-bezier(0.4,0.0,1,1), opacity .1s cubic-bezier(0.4,0.0,1,1);
        }
    }
    &__thumbnail:hover .youtube-button_theme_default .ytp-large-play-button-bg
    {
        opacity: 1;
        fill: #cc181e;
        transition: fill .1s cubic-bezier(0.0,0.0,0.2,1), opacity .1s cubic-bezier(0.0,0.0,0.2,1);
    }
}